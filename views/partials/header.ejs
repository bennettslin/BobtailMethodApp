<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/html1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-us">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bobtail Method app</title>

  <!-- Latest compiled and minified CSS & JS -->
  <link rel="stylesheet" media="screen" href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,400italic|Open+Sans:400italic,400' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script src="//code.jquery.com/jquery.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="/script.js"></script>
  <script src="/abcjs_basic_latest-min.js" type="text/javascript"></script>

</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <!-- Keeps navbar from being crazy -->
  <div class="container position-relative">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Bobtail Method</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav">
        <% if (typeof loggedInUser != 'undefined' && loggedInUser.id == 1) { %>
          <li><a href="/users" class="btn btn-warning">All Users</a></li>
        <% } %>

        <% if (typeof loggedInUser != 'undefined' && loggedInUser) { %>
          <li><a href="/users/compositions/<%= loggedInUser.id %>">My Compositions</a></li>
          <% if (typeof loggedInUser != 'undefined' && !loggedInUser.password) { %>
          <li><a href="/users/friends/<%= loggedInUser.id %>">My Friends</a></li>
          <% } %>

        <% } else { %>
        <% } %>
        <li><a href="/compositions/new">New Composition</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/about">About</a></li>
        <li><a href="/howto">Quick Guide</a></li>

        <% if (typeof loggedInUser != 'undefined' && loggedInUser) { %>

          <li><a href="/users/<%= loggedInUser.id %>" class="btn btn-info"><i class="glyphicon glyphicon-user"></i> <%= typeof loggedInUser.firstname === 'string' ? loggedInUser.firstname : 'Unknown' %></a></li>
          <li><a href="/auth/logout" class="btn">Log out</a></li>
        <% } else { %>
          <li><a href="/auth/login" class="btn"><i class="glyphicon glyphicon-user"></i> Log in</a></li>
          <li><a href="/auth/signup" class="btn btn-success">Sign up</a></li>
        <% } %>
      </ul>
      </div>
    </div><!-- /.navbar-collapse -->
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <% include ./alerts %>
      </div>